        </div>
    </nav>


    <div class="container body-content" style="margin-bottom:5px">
        @RenderBody()
    </div>
    <div class="navbar fixed-bottom navbar-dark bg-dark">
        <div align="center" style="color: whitesmoke; font-weight: bold">&copy; @DateTime.Now.Year Online Course & Result Management System</div>
    </div>
    
    
   
</body>
</html>
