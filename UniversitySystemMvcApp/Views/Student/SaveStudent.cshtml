@using UniversitySystemMvcApp.Models
@model UniversitySystemMvcApp.Models.Student
@{
    ViewBag.Title = "SaveStudent";

}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SaveStudentForm" }))
{
    <div style="padding-left: ; border: 0pt whitesmoke groove; border-radius: 5pt; margin-bottom:3% ;">
        <button type="button" class="btn btn-primary btn-lg btn-block" style="margin-top: 3%; margin-bottom: 3%;">Student Registration</button>

        <div class="container align-content-center" style="">
            <hr class="bg-white" />
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @style = "font-size:large;font-weight:bold;color:whitesmoke;" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Email, new { @style = "font-size:large;font-weight:bold;color:whitesmoke;" })
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.ContactNo, new { @style = "font-size:large;font-weight:bold;color:whitesmoke;" })
                @Html.TextBoxFor(x => x.ContactNo, new { @class = "form-control", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
                @Html.ValidationMessageFor(x => x.ContactNo, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Date, new { @style = "font-size:large;font-weight:bold;color:whitesmoke;" })
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
                @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Address, new { @style = "font-size:large;font-weight:bold;color:whitesmoke;" })
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
                @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DepartmentCode, new { @style = "font-size:large;font-weight:bold;color:whitesmoke;" })
                @Html.DropDownListFor(x => x.DepartmentCode,
                    new SelectList(ViewBag.Departments, "Value", "Text"), new { @class = "form-control", @style = "font-size:large;font-weight:;color:black;background-color: white;" })
                @Html.ValidationMessageFor(x => x.DepartmentCode, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <hr class="bg-white" />
            <div class="form-group">
                @if (ViewBag.Message != null)
                {
                    <h5 class="text-success" style="font-weight: bold;font-size: large">@ViewBag.Message</h5>
                }
            </div>
        </div>
    </div>

}
@{
    Student std = ViewBag.LastStudent;
}
@if (ViewBag.LastStudent != null)
{
    <table class="table table-active table-bordered table-responsive" style="margin-bottom: 5%; font-size: large;">
        <tr class="" style="color:azure;background-color:black;font-weight: bold;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentCode)
            </th>
            <th>Action</th>
        </tr>
        <tr class="" style="color:azure;background-color:black;">
            <td>
                @std.Name
            </td>
            <td>
                @std.RegNo
            </td>
            <td>
               @std.Email
            </td>
            <td>
                @std.ContactNo
            </td>
            <td>
               @std.Date
            </td>
            <td>
               @std.Address
            </td>
            <td>
                @std.DepartmentCode
            </td>
            <td>
                <button type="button" class="btn btn-success">Edit</button>
            </td>
        </tr>

    </table>

}
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
